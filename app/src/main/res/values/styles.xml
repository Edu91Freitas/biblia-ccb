<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">serif</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_accept_dark</item>
        <item name="ic_action_copy">@drawable/ic_action_copy_dark</item>
    </style>

    <style name="AppBaseThemeDark" parent="@style/Theme.AppCompat">
    </style>
    <!-- Application theme. -->
    <style name="AppThemeDark" parent="@style/AppBaseThemeDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">serif</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_accept_light</item>
        <item name="ic_action_copy">@drawable/ic_action_copy_light</item>
        <item name="android:background">@drawable/background_material_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Base application theme. -->
    <style name="AppDrawerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/colorEerieBlack</item>
        <item name="colorAccent">@color/colorGainsboro</item>
        <item name="colorPrimaryDark">@color/colorEerieBlack</item>
    </style>

    <style name="AppDrawerTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDrawerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppDrawerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
